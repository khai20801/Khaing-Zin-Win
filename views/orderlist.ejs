<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Orders</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
 </head>

 <style type="text/css">

 a{
 	text-decoration: none;
 	color: white;
 }

 th,td,h1{
 	color: white;
 }

 body{
	background-color: #8BC6EC;
	background-image: linear-gradient(135deg, #8BC6EC 1%, #9599E2 37%);
 }

 input,button,table{
 	border-radius: 20px 20px 20px 20px;
 }

 </style>

  <body>
  <center><h1>Orders</h1>

 
  
  <table cellspacing="1" cellpadding="5" border="1">
    <tr>
    
    <th>Name</th>
    <th>Food</th>
    <th>Message</th>
    <th>Status</th>
    <th>Action</th>
  </tr>


  <% data.forEach(function(order){ %>
     <tr>
      
       <td><%= order.name %></td>
       <td><%= order.food %></td>
       <td><%= order.message %></td>
       <td><%= order.status %></td>
       <td><button style="background-color:green;"><a href="updateorder/<%= order.doc_id %>">Edit</a></button> | <button style="background-color:red;">Delete</button></td>
     </tr>
  <% }); %>

	</table>

	</center>

 
 

  </body>

</html>